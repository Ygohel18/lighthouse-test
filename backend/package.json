        "uuid": "^9.x",
        "zod": "^3.x"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.x",
        "@types/node": "^20.x",
        "@types/puppeteer": "^5.4.7",
        "@types/uuid": "^9.x",
        "@typescript-eslint/eslint-plugin": "^7.x",
        "@typescript-eslint/parser": "^7.x",
        "eslint": "^8.x",
